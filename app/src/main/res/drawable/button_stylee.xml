<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- Couleur lorsque le bouton est pressé -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Couleur par défaut -->
            <stroke android:width="1dp" android:color="#000000"/> <!-- Bordure noire -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>

