<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/lieuDepart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="LieuDÃ©part"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/lieuArrive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="LieuArrive"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/horaire"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Horaire"
        android:inputType="datetime"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/prix"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Prix"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/attribute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Attribute"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/idVehicle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:entries="@array/vehicle_array"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender"
        android:text="Valider"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
